<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/profilebackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddParking">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_marginTop="50dp"
                android:layout_height="130dp"
                android:src="@drawable/profilepic" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter Total Slots"
                app:boxStrokeColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Slots"
                    android:maxLength="3"
                    android:inputType="number"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter Parking Name"
                app:boxStrokeColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/parkingName"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Price per hour"
                app:boxStrokeColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/price"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/register"
                android:layout_height="55dp"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                app:cardElevation="60dp"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginBottom="0dp"
                app:cardBackgroundColor="@color/backgroucndGreen">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Add Parking"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25dp" />




            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>